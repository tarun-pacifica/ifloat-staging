<%= partial "common/login" %>

<div id="marquee">
	<%= partial "common/finder" %>
	<div class="panel">
		<div class="left"></div>
		<div class="centre">
			<% if @show_purchases_button %>
			<a href="/picked_products/options" id="purchases"></a>
			<% else %>
			<div id="purchases"></div>
			<% end %>
			<a href="#" id="blog"></a>
			<% if session.authenticated? %>
			<a id="logout" href="#" onclick="login_logout()"></a>
			<% else %>
			<a id="login" href="#" onclick="login_open()"></a>
			<% end %>
		</div>
		<div class="right"></div>
	</div>
</div>

<script type="text/javascript" charset="utf-8">
	$("body").css("background", "url(/images/marquee/backgrounds/sky.png) repeat-x");
	
	<% Dir[Merb.root / "public" / "images" / "marquee" / "buttons" / "*.png"].each do |path| %>
	util_preload_image("/images/marquee/buttons/<%= File.basename(path) %>");
	<% end %>
</script>