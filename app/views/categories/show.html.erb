<%= partial "common/header" %>

<div id="body">

<div id="category_nav" class="panel minor">
  <div class="title"> <h2>Categories</h2> </div>
  <div class="sections">
    <p class="prompt">Please select a <%= @showing_products ? "product" : "category" %></p>
  </div>
</div>

<div id="category_contents" class="panel major">
  <div class="title">
    <h2> <a href="/categories">All</a> <% unless @links.empty? %> <span>&gt;</span> <%= @links.join("<span>&gt;</span>") %> <% end %> </h2>
  </div>
  
  <div class="body">
    <%= @children_links %>
  </div>
</div>

</div>
