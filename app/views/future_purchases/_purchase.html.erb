<%
	dom_id = "purchase_#{purchase.id}"
	title = @purchase_titles_by_product_id[purchase.definitive_product_id]
	
	klass, url = nil, nil
	
	if @partner_product_urls.nil?
		url = "/products/#{purchase.definitive_product_id}"
		klass = (purchase.deferred? ? "future" : "now")
	else
		url = @partner_product_urls[purchase.definitive_product_id]
		klass = (url.nil? ? "unavailable" : "available")
	end
%>

<a id=<%= dom_id.inspect %> class=<%= klass.inspect %> href=<%= (url || '#').inspect %>><%= title %></a>
